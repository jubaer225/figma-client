{%- style -%}
  .subscription-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background: #FFF;
  }

  .subscription-section-{{ section.id }}
  .subscription-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .subscription-section-{{ section.id }}
  .subscription-card {
    background: white;
    border-radius: 12px;
    padding: 32px 24px;
    text-align: left;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .subscription-section-{{ section.id }}
  .subscription-card__title {
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 16px;
    color: #333;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__price {
    font-size: 48px;
    font-weight: 700;
    margin: 0 0 8px;
    color: #33D177;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__period {
    font-size: 16px;
    color: #666;
    margin: 0 0 24px;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__description {
    font-size: 14px;
    color: #666;
    margin: 0 0 24px;
    line-height: 1.6;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__button {
    display: inline-block;
    padding: 12px 32px;
    background: #33D177;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .subscription-section-{{ section.id }}.subscription-card__button:hover {
    background: #2ab866;
  }

  @media screen and (max-width: 989px) {
    .subscription-section-{{ section.id }} .subscription-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .subscription-section-{{ section.id }} .subscription-cards {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<section class="subscription-section subscription-section-{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="section-heading" style="text-align: left; margin-bottom: 48px;">
        <p>
          Basic
          <span>Subscriptions</span>
        </p>
      </h2>
    {%- endif -%}

    <div class="subscription-cards">
      {%- for block in section.blocks -%}
        <div class="subscription-card" {{ block.shopify_attributes }}>
          {%- if block.settings.title != blank -%}
            <h3 class="subscription-card__title">{{ block.settings.title }}</h3>
          {%- endif -%}

          {%- if block.settings.price != blank -%}
            <div class="subscription-card__price">{{ block.settings.price }}</div>
          {%- endif -%}

          {%- if block.settings.period != blank -%}
            <div class="subscription-card__period">{{ block.settings.period }}</div>
          {%- endif -%}

          {%- if block.settings.description != blank -%}
            <div class="subscription-card__description">{{ block.settings.description }}</div>
          {%- endif -%}

          {%- if block.settings.button_label != blank -%}
            <a href="{{ block.settings.button_link }}" class="subscription-card__button">
              {{ block.settings.button_label }}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

