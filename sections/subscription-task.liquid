{%- style -%}
  * {
    margin: 0;
    padding: 0;
    list-style: none;
    box-sizing: border-box;
  }
  .subscription-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background: #FFF;
  }

  .subscription-section-{{ section.id }}
  .subscription-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-heading-primary {
    font-size: 48px;
    font-family: 'inter'
    , sans-serif;
    font-weight: 700;
    color: #111827;
  }

  .section-heading-primary span {
    background-image: linear-gradient(to right, #9DE053 0%, #01CB6B 100%);
    color: white;
    display: inline-flex;
    padding: 22px 28px !important;
    align-items: center;
    justify-content: center;
    border-top-left-radius: 40px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 40px;
    border-bottom-left-radius: 10px;
    line-height: 18px;
    letter-spacing: 0;
    vertical-align: middle;
  }

  .subscription-section-{{ section.id }}
  .subscription-card {
    background: white;
    border-radius: 12px;
    padding: 32px 24px;
    text-align: left;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .subscription-section-{{ section.id }}
  .subscription-card__title {
    font-size: 24px;
    font-weight: 600;
    color: #333;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__price {
    font-size: 48px;
    font-weight: 700;
    margin: 0 0 8px;
    color: #33D177;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__period {
    font-size: 16px;
    color: #666;
    margin: 0 0 24px;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__subtitle {
    font-size: 16px;
    color: #555;
    font-weight: 500;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__description {
    font-size: 14px;
    color: #666;
    line-height: 1.6;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__features {
    padding: 0;
    list-style: none;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__feature {
    font-size: 14px;
    color: #333;
    padding-left: 24px;
    position: relative;
    line-height: 1.6;
  }

  .subscription-section-{{ section.id }}.subscription-card__feature:before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: #33D177;
    font-weight: 700;
  }

  .subscription-section-{{ section.id }}
  .subscription-card__button {
    display: inline-block;
    padding: 12px 32px;
    background: #33D177;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .subscription-section-{{ section.id }}.subscription-card__button:hover {
    background: #2ab866;
  }

  @media screen and (max-width: 989px) {
    .subscription-section-{{ section.id }} .subscription-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .subscription-section-{{ section.id }} .subscription-cards {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<section class="subscription-section subscription-section-{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="section-heading-primary" style="text-align: center; margin-bottom: 48px;">
        <p>
          Basic
          <span>Subscriptions</span>
        </p>
      </h2>
    {%- endif -%}

    <div class="subscription-cards">
      {%- for block in section.blocks -%}
        <div class="subscription-card" {{ block.shopify_attributes }}>
          {%- if block.settings.title != blank -%}
            <h3 class="subscription-card__title">{{ block.settings.title }}</h3>
          {%- endif -%}

          {%- if block.settings.subtitle != blank -%}
            <p class="subscription-card__subtitle">{{ block.settings.subtitle }}</p>
          {%- endif -%}

          {%- if block.settings.price != blank -%}
            <div class="subscription-card__price">{{ block.settings.price }}</div>
          {%- endif -%}

          {%- if block.settings.description != blank -%}
            <p class="subscription-card__description">{{ block.settings.description }}</p>
          {%- endif -%}

          {%- if block.settings.features != blank -%}
            {%- assign feature_lines = block.settings.features | split: '\n' -%}
            <ul class="subscription-card__features">
              {%- for feature_line in feature_lines -%}
                {%- assign trimmed = feature_line | strip -%}
                {%- if trimmed != '' -%}
                  <li class="subscription-card__feature">{{ trimmed }}</li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

