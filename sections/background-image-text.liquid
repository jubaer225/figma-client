{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  assign widths = '375, 550, 750, 1100, 1500, 2000, 3000, 3840'
-%}

{%- style -%}
  .gradient-hero-{{ section.id }} {
    background: linear-gradient(to right, {{ section.settings.gradient_start }}, {{ section.settings.gradient_end }});
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card {
    position: relative;
    overflow: hidden;
    border-radius: 28px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card--small {
    min-height: 320px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card--medium {
    min-height: 460px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card--large {
    min-height: 620px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__media {
    position: absolute;
    inset: 0;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__placeholder {
    width: 100%;
    height: 100%;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__overlay {
    position: absolute;
    inset: 0;
    background: #000;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: inherit;
    padding: 48px 0;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__box {
    text-align: center;
    max-width: 760px;
    margin: 0 auto;
    padding: 32px 28px;
    gap: 12px;
    display: grid;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__heading {
    margin: 0;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__subtitle {
    margin: 0;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__mini {
    margin: 0;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    font-size: 0.9em;
    opacity: 0.9;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__button-wrapper {
    display: flex;
    justify-content: center;
    gap: 12px;
  }
{%- endstyle -%}

<section class="gradient-hero gradient-hero-{{ section.id }}">
  <div class="page-width">
    <div class="gradient-hero__card gradient-hero__card--{{ section.settings.image_height }} color-{{ section.settings.color_scheme }}">
      <div class="gradient-hero__media">
        {%- if section.settings.background_image != blank -%}
          {{ section.settings.background_image
 | image_url: width: 3840
 | image_tag:
 	width: section.settings.background_image.width,
 	height: section.settings.background_image.height,
 	sizes: '(min-width: 1200px) 1200px, 100vw',
 	widths: widths,
 	class: 'gradient-hero__image',
 	fetchpriority: fetch_priority
          }}
        {%- else -%}
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg gradient-hero__placeholder' }}
        {%- endif -%}
        <div class="gradient-hero__overlay" style="opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};"></div>
      </div>

      <div class="gradient-hero__content">
        <div class="gradient-hero__box content-container content-container--full-width-mobile gradient color-{{ section.settings.color_scheme }}">
          {%- if section.settings.heading != blank -%}
            <h2 class="gradient-hero__heading inline-richtext">{{ section.settings.heading }}</h2>
          {%- endif -%}

          {%- if section.settings.subtitle != blank -%}
            <div class="gradient-hero__subtitle rte">{{ section.settings.subtitle }}</div>
          {%- endif -%}

          {%- if section.settings.mini_subtitle != blank -%}
            <p class="gradient-hero__mini">{{ section.settings.mini_subtitle }}</p>
          {%- endif -%}

          {%- if section.settings.button_label != blank -%}
            <div class="gradient-hero__button-wrapper">
              <a
                {%- if section.settings.button_link == blank -%}
                role="link"
                aria-disabled="true"
                {%- else -%}
                href="{{ section.settings.button_link }}"
                {%- endif -%}
                class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">
                {{- section.settings.button_label | escape -}}
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Gradient banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color",
        "id": "gradient_start",
        "label": "Gradient start",
        "default": "#01CB6B"
      },
      {
        "type": "color",
        "id": "gradient_end",
        "label": "Gradient end",
        "default": "#A0E052"
      },
      {
        "type": "range",
        "id": "gradient_angle",
        "min": 0,
        "max": 360,
        "step": 5,
        "unit": "deg",
        "label": "Gradient angle",
        "default": 135
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      }, {
        "type": "range",
        "id": "image_overlay_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Image overlay opacity",
        "default": 30
      }, {
        "type": "select",
        "id": "image_height",
        "options": [
          {
            "value": "small",
            "label": "Small"
          }, {
            "value": "medium",
            "label": "Medium"
          }, {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "medium",
        "label": "Height"
      }, {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "Add a bold headline"
      }, {
        "type": "richtext",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "<p>Add supporting copy to explain your offer.</p>"
      }, {
        "type": "text",
        "id": "mini_subtitle",
        "label": "Mini subtitle",
        "default": "Optional eyebrow copy"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Shop now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }, {
        "type": "checkbox",
        "id": "button_style_secondary",
        "default": false,
        "label": "Use secondary button style"
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Content color scheme",
        "default": "scheme-1"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 120,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 120,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 40
      }
    ],
    "presets": [
      {
        "name": "Gradient banner"
      }
    ]
  }
{% endschema %}