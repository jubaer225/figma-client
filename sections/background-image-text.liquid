{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  assign widths = '375, 550, 750, 1100, 1500, 2000, 3000, 3840'
-%}

{%- style -%}
  .gradient-hero-{{ section.id }} {
    background: linear-gradient(to right, {{ section.settings.gradient_start }}, {{ section.settings.gradient_end }});
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card--small {
    min-height: 200px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card--medium {
    min-height: 250px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card--large {
    min-height: 320px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__image-column {
    flex: 0 0 30%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__image {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__content {
    flex: 0 0 40%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 20px 15px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__box {
    width: 100%;
    display: grid;
    gap: 8px;
  }

  @media screen and (max-width: 749px) {
    .gradient-hero-{{ section.id }} .gradient-hero__card {
      flex-direction: column;
      gap: 30px;
    }

    .gradient-hero-{{ section.id }}
    .gradient-hero__image-column
    , .gradient-hero-{{ section.id }}
    .gradient-hero__content {
      flex: 1 1 100%;
    }

    .gradient-hero-{{ section.id }}.gradient-hero__image-column:last-child {
      order: -1;
    }
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__heading {
    margin: 0;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__subtitle {
    margin: 0;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__mini {
    margin: 0;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    font-size: 0.9em;
    opacity: 0.9;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__button-wrapper {
    display: flex;
    justify-content: center;
    gap: 12px;
  }
{%- endstyle -%}

<section class="gradient-hero gradient-hero-{{ section.id }}">
  <div class="page-width">
    <div class="gradient-hero__card gradient-hero__card--{{ section.settings.image_height }}">
      <div class="gradient-hero__image-column">
        <img
          src="{{ '10.1.png' | asset_url }}"
          alt="Decorative image"
          class="gradient-hero__image"
          loading="lazy"
          width="200px"
          height="200px" />
      </div>

      <div class="gradient-hero__content">
        <div class="gradient-hero__box">
          {%- if section.settings.heading != blank -%}
            <h2 class="gradient-hero__heading inline-richtext">{{ section.settings.heading }}</h2>
          {%- endif -%}

          {%- if section.settings.subtitle != blank -%}
            <div class="gradient-hero__subtitle rte">{{ section.settings.subtitle }}</div>
          {%- endif -%}

          {%- if section.settings.mini_subtitle != blank -%}
            <p class="gradient-hero__mini">{{ section.settings.mini_subtitle }}</p>
          {%- endif -%}

          {%- if section.settings.button_label != blank -%}
            <div class="gradient-hero__button-wrapper">
              <a
                {%- if section.settings.button_link == blank -%}
                role="link"
                aria-disabled="true"
                {%- else -%}
                href="{{ section.settings.button_link }}"
                {%- endif -%}
                class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">
                {{- section.settings.button_label | escape -}}
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>

      <div class="gradient-hero__image-column">
        <img
          src="{{ '10.2.png' | asset_url }}"
          alt="Decorative image"
          class="gradient-hero__image"
          loading="lazy"
          width="200px"
          height="200px" />
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Gradient banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color",
        "id": "gradient_start",
        "label": "Gradient start",
        "default": "#01CB6B"
      },
      {
        "type": "color",
        "id": "gradient_end",
        "label": "Gradient end",
        "default": "#A0E052"
      },
      {
        "type": "range",
        "id": "gradient_angle",
        "min": 0,
        "max": 360,
        "step": 5,
        "unit": "deg",
        "label": "Gradient angle",
        "default": 135
      },
      {
        "type": "select",
        "id": "image_height",
        "options": [
          {
            "value": "small",
            "label": "Small"
          }, {
            "value": "medium",
            "label": "Medium"
          }, {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "medium",
        "label": "Height"
      }, {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "Add a bold headline"
      }, {
        "type": "richtext",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "<p>Add supporting copy to explain your offer.</p>"
      }, {
        "type": "text",
        "id": "mini_subtitle",
        "label": "Mini subtitle",
        "default": "Optional eyebrow copy"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Shop now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }, {
        "type": "checkbox",
        "id": "button_style_secondary",
        "default": false,
        "label": "Use secondary button style"
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Content color scheme",
        "default": "scheme-1"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 120,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 120,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 40
      }
    ],
    "presets": [
      {
        "name": "Gradient banner"
      }
    ]
  }
{% endschema %}