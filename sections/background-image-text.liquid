{%- style -%}
  .gradient-hero-{{ section.id }} {
    background: linear-gradient(to right, {{ section.settings.gradient_start }}, {{ section.settings.gradient_end }});
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    color: white;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card--small {
    min-height: 200px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card--medium {
    min-height: 250px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__card--large {
    min-height: 320px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__image-column {
    flex: 0 0 20%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__image {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__content {
    flex: 0 0 60%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 20px 15px;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__box {
    width: 100%;
    display: grid;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__heading {
    margin: 0;
    color: white;
    font-weight: 600;
    font-size: 44px;
    font-family: 'inter'
    , sans-serif;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__subtitle {
    margin: 0;
    font-size: 44px;
    font-family: 'barlow'
    , sans-serif;
    font-weight: 300 !important;
    letter-spacing: 0;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__mini {
    margin: 0;
    text-transform: uppercase;
    font-size: 30px;
    font-weight: 300 !important;
  }

  .gradient-hero-{{ section.id }}
  .gradient-hero__button-wrapper {
    display: flex;
    justify-content: center;
    gap: 12px;
  }

  .button-feature {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 18px 28px !important;
    background: #fff;
    text-decoration: none;
    color: #33D177;
    font-family: 'Barlow'
    , sans-serif;
    font-weight: 600;
    font-size: 22px;
    transition: all 0.3s ease;
    border-top-left-radius: 40px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 40px;
    border-bottom-left-radius: 8px;
    line-height: 18px;
    letter-spacing: 0;
    vertical-align: middle;
    border: none;
    outline: none;
    margin-top: 24px
  }

  .button-feature:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 15px rgba(51, 209, 119, 0.4);
  }

  @media screen and (max-width: 749px) {
    /* Make card a wrapping flex row so 50/50 works */
    .gradient-hero-{{ section.id }} .gradient-hero__card {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-around;
      gap: 0;
    }

    /* Flatten content wrappers so inner pieces can be ordered */
    .gradient-hero-{{ section.id }} .gradient-hero__content
    , .gradient-hero-{{ section.id }}
    .gradient-hero__box {
      display: contents;
    }

    /* 1) Content first, full width */
    .gradient-hero-{{ section.id }} .gradient-hero__heading
    , .gradient-hero-{{ section.id }}
    .gradient-hero__subtitle
    , .gradient-hero-{{ section.id }}
    .gradient-hero__mini {
      order: 1;
      flex: 0 0 100%;
      max-width: 100%;
    }

    /* 2) Two images side-by-side at 50% each */
    .gradient-hero-{{ section.id }} .gradient-hero__image-column {
      order: 2;
      flex: 0 0 35%;
      max-width: 35%;
      justify-content: center;
      margin-bottom: 24px;
    }

    /* 3) Button last, full width */
    .gradient-hero-{{ section.id }} .gradient-hero__button-wrapper {
      order: 4;
      flex: 0 0 100%;
      max-width: 100%;
      justify-content: center;
    }

    .gradient-hero-{{ section.id }}
    .gradient-hero__heading {
      font-size: 30px;
    }

    .gradient-hero-{{ section.id }}
    .gradient-hero__subtitle {
      font-size: 22px;
    }

    .gradient-hero-{{ section.id }}
    .gradient-hero__mini {
      font-size: 22px;
      margin-bottom: 24px;
    }

    .button-feature {
      padding: 18px 28px !important;
    }
  }
{%- endstyle -%}

<section class="gradient-hero gradient-hero-{{ section.id }}">
  <div class="page-width">
    <div class="gradient-hero__card gradient-hero__card--{{ section.settings.image_height }}">
      <div class="gradient-hero__image-column">
        <img
          src="{{ '10.1.png' | asset_url }}"
          alt="Decorative image"
          class="gradient-hero__image"
          loading="lazy"
          width="200px"
          height="200px" />
      </div>

      <div class="gradient-hero__content">
        <div class="gradient-hero__box">
          {%- if section.settings.heading != blank -%}
            <h2 class="gradient-hero__heading inline-richtext">{{ section.settings.heading }}</h2>
          {%- endif -%}

          {%- if section.settings.subtitle != blank -%}
            <div class="gradient-hero__subtitle rte">{{ section.settings.subtitle }}</div>
          {%- endif -%}

          {%- if section.settings.mini_subtitle != blank -%}
            <p class="gradient-hero__subtitle gradient-hero__mini">{{ section.settings.mini_subtitle }}</p>
          {%- endif -%}

          {%- if section.settings.button_label != blank -%}
            <div class="gradient-hero__button-wrapper">
              <a href="{{ section.settings.button_link }}" class="button-feature">

                {{ section.settings.button_label | escape }}
                <img
                  src="{{ 'arrow.png' |  asset_url }}"
                  alt="arrow icon"
                  width="16"
                  height="16" />
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>

      <div class="gradient-hero__image-column">
        <img
          src="{{ '10.2.png' | asset_url }}"
          alt="Decorative image"
          class="gradient-hero__image"
          loading="lazy"
          width="200px"
          height="200px" />
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Gradient banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color",
        "id": "gradient_start",
        "label": "Gradient start",
        "default": "#01CB6B"
      },
      {
        "type": "color",
        "id": "gradient_end",
        "label": "Gradient end",
        "default": "#A0E052"
      },
      {
        "type": "range",
        "id": "gradient_angle",
        "min": 0,
        "max": 360,
        "step": 5,
        "unit": "deg",
        "label": "Gradient angle",
        "default": 135
      },
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "Add a bold headline"
      }, {
        "type": "richtext",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "<p>Add supporting copy to explain your offer.</p>"
      }, {
        "type": "text",
        "id": "mini_subtitle",
        "label": "Mini subtitle",
        "default": "Optional eyebrow copy"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Shop now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 120,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 120,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 40
      }
    ],
    "presets": [
      {
        "name": "Gradient banner"
      }
    ]
  }
{% endschema %}